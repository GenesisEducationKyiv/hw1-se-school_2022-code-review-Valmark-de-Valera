{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "no-unused-vars": ["error"],
        "no-invalid-regexp": ["error"],
        "no-irregular-whitespace": ["error"],
        "no-console": "warn",
        "prettier/prettier":
        [
            "error",
            {
                "parser": "typescript",
                "singleQuote": true,
                "useTabs": true,
                "tabWidth": 4,
                "semi": true,
                "bracketSpacing": true,
                "requirePragma": false,
                "arrowParens": "always",
                "printWidth": 100
            }
        ]
    }
}
